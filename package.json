{
  "name": "react-scroll-sense-header",
  "version": "1.0.7",
  "description": "A React component that provides intelligent header behavior based on scroll position. The header can hide/show on scroll, stay fixed, or remain at the top of the document.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && copyfiles src/styles.css dist/ --flat",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "nextjs",
    "sticky",
    "header",
    "scroll",
    "typescript"
  ],
  "author": "Antonio99x",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "copyfiles": "^2.4.1",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antonio99x/scroll-sense-header.git"
  },
  "bugs": {
    "url": "https://github.com/antonio99x/scroll-sense-header/issues"
  },
  "homepage": "https://antonio99x.github.io/scroll-sense-header/"
}
